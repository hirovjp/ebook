<p id="notice"><%= notice %></p>
<%= @lesson_wordlist.count.inspect %>
<table class="table">
  <thead>
  <tr>
    <td>ID</td>
    <th>Lesson ID</th>
    <th>Language</th>
    <th>Translate language</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @user.level == 1 %>
    <%= link_to 'New Wordlist', new_wordlist_path, :class => "btn btn-success" %>
    <% @lesson_wordlist.each do |wordlist| %>
      <tr>
        <td><%= wordlist.id %></td>
        <td><%= wordlist.lesson_id %></td>
        <td><%= wordlist.language %></td>
        <td><%= wordlist.translate_language %></td>
        <td><%= link_to 'Show', wordlist %></td>
        <td><%= link_to 'Edit', edit_wordlist_path(wordlist) %></td>
        <td><%= link_to 'Destroy', wordlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <% @lesson_wordlist.each do |wordlist|%>
      <tr>
        <td><%= wordlist.id %></td>
        <td><%= wordlist.lesson_id %></td>
        <td><%= wordlist.language %></td>
        <td><%= wordlist.translate_language %></td>
        <td><%= link_to 'Learn', wordlist %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

