<p id="notice"><%= notice %></p>
<%#= @wordlists.inspect %>
<h1>Wordlists</h1>
<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <th>Lesson ID</th>
      <th>Language</th>
      <th>Translate language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @user.level == 1 %>
    <%= link_to 'New Wordlist', new_wordlist_path, :class => "btn btn-success" %>
      <% @wordlists.each do |word| %>
        <tr>
          <td><%= word.id %></td>
          <td><%= word.lesson_id %></td>
          <td><%= word.language %></td>
          <td><%= word.translate_language %></td>
          <td><%= link_to 'Show', word %></td>
          <td><%= link_to 'Edit', edit_wordlist_path(word) %></td>
          <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% else %>
      <% @wordlists.each do |wordlist|%>
        <tr>
          <td><%= wordlist.id %></td>
          <td><%= wordlist.category_id %></td>
          <td><%= wordlist.language %></td>
          <td><%= wordlist.translate_language %></td>
          <td><%= link_to 'Learn', new_learnwordlist_path %></td>
          <td><%= link_to 'Learn', wordlist %></td>
        </tr>
      <% end %>
    <% end %>
  <% else %>
    <% @wordlists.each do |wordlist| %>
      <tr>
        <td><%= wordlist.id %></td>
        <td><%= wordlist.category_id %></td>
        <td><%= wordlist.language %></td>
        <td><%= wordlist.translate_language %></td>
        <td><%= link_to 'Learn', wordlist %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
