<div class="dropdown" align="right">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%=@user.email %>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Setting</a>
      <%= link_to 'Logout', logout_path, :class => "dropdown-item", :method => :delete %>
    </div>
</div>

<div class="container">
<h1>List word list</h1>
<table class="table">
  <thead>
  <tr>
    <th>id</th>
    <th>category</th>
    <th>language</th>
    <th>translate</th>
  </tr>
  </thead>

  <tbody>
  <% @wordlist.each do |word| %>
    <tr>
      <td><%= word.id %></td>
      <td><%= word.category.name %></td>
      <td><%= word.language %></td>
      <td><%= word.translate_language %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p><%= will_paginate @wordlist %></p>

<h1>Learn word list</h1>
<table class="table">
  <thead>
  <tr>
    <th>id</th>
    <th>language</th>
    <th>translate_language</th>
    <th>time learn</th>
  </tr>
  </thead>
  <tbody>
  <% @demo.each do |word| %>
    <tr>
      <td><%= word.id %></td>
      <td><%= word.language %></td>
      <td><%= word.translate_language %></td>
      <td><%= word.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
