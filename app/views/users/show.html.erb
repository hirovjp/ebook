<div class="container">
  <p>Name: <%= @user.email %></p>
  <p>Result: <%= @user.learnwordlists.count %>/<%= Wordlist.count %></p>

  <% if @user == current_user %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn edit-button' %>
  <% else %>
    <% if current_user_is_following(current_user.id, @user.id) %>
      <%= link_to 'UnFollowing', unfollow_user_path(@user.id), remote: true, class: 'btn unfollow-button', id: 'unfollow-button', method: :post %>
    <% else %>
      <%= link_to 'Follow', follow_user_path(@user.id), remote: true, class: 'btn follow-button', id: 'follow-button', method: :post %>
    <% end %>
  <% end %>
</div>